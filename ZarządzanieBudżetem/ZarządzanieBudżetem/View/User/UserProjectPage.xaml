<Page x:Class="ZarządzanieBudżetem.View.User.UserProjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ZarządzanieBudżetem.View.User"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="UserProjectPage">

    <Grid Background="White">

        <ListBox Name="ProjectList" ItemsSource="{Binding Projects}" MouseDoubleClick="ListBox_MouseDoubleClick" Margin="64,25,157,339" >
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel>
                        <TextBlock Text="{Binding Nazwa}" />
                        <TextBlock Text="{Binding Data_Utworzenia}" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <Button Content="Dodaj nowy projekt" HorizontalAlignment="Left" Height="52" Margin="64,491,0,0" VerticalAlignment="Top" Width="136" Click="Button_Click"/>
        <Button Click="DeleteProject_Click" Content="Usuń projekt" HorizontalAlignment="Left" Height="52" Margin="297,491,0,0" VerticalAlignment="Top" Width="148"/>


    </Grid>
</Page>
